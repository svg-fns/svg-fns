{
  "name": "svg-fns",
  "author": "Mayank Kumar Chaudhari (https:/mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.0.1",
  "description": "Lightweight, tree-shakeable utilities for working with SVGs. Modular design inspired by date-fns â€” import only what you need.",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:svg-fns/svg-fns",
  "bugs": "https://github.com/svg-fns/svg-fns/issues",
  "homepage": "https://github.com/svg-fns/svg-fns/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "import": "./dist/*",
      "require": "./dist/*"
    },
    "./dist/*": {
      "types": "./dist/*",
      "import": "./dist/*",
      "require": "./dist/*"
    }
  },
  "scripts": {
    "build": "tsup && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch && tsc -p tsconfig-build.json -w",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/node": "^24.5.0",
    "@xmldom/xmldom": "^0.8.11",
    "esbuild-plugin-rdi": "^0.0.0",
    "sharp": "^0.34.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@svg-fns/convert": "workspace:^",
    "@svg-fns/info": "workspace:^",
    "@svg-fns/io": "workspace:^"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/svg-fns"
    },
    {
      "type": "github",
      "url": "https:/github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "svg",
    "svg utilities",
    "svg functions",
    "svg-fns",
    "svg parser",
    "svg convert",
    "svg info",
    "svg dimensions",
    "svg colors",
    "svg to png",
    "svg to base64",
    "modular",
    "tree-shakeable",
    "browser",
    "nodejs",
    "frontend",
    "graphics",
    "vector graphics",
    "Customizable",
    "Cutting-edge",
    "Compatibility",
    "Frontend development",
    "UI components",
    "Progressive",
    "Web development",
    "Modern",
    "Seamless integration",
    "svg-fns",
    "mayank1513"
  ],
  "peerDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@xmldom/xmldom": "^0.8.11",
    "sharp": "^0.34.4"
  },
  "peerDependenciesMeta": {
    "@resvg/resvg-js": {
      "optional": true
    },
    "@xmldom/xmldom": {
      "optional": true
    },
    "sharp": {
      "optional": true
    }
  }
}
