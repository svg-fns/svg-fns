{
  "name": "turborepo-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "doc": "typedoc && cp _config.yml docs && tsx scripts/add-frontmatter.ts",
    "format": "biome check . --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "preinstall": "tsx scripts/update-pm.ts",
    "prepare": "husky",
    "release": "tsx ./scripts/publish.ts",
    "sync": "turborepo-template-upgrade",
    "test": "vitest run --coverage && tsx ./scripts/split-lcov.ts",
    "typecheck": "turbo typecheck",
    "upgrade": "tsx ./scripts/upgrade.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.6",
    "@vitest/coverage-v8": "^4.0.17",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "plop": "^4.0.4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4",
    "turborepo-template-upgrade": "^0.8.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typedoc-plugin-missing-exports": "^4.1.2",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@<6.0.6": ">=6.0.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3"
    }
  }
}
