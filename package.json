{
  "name": "turborepo-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "doc": "tsx scripts/doc.ts && typedoc && cp _config.yml docs && tsx scripts/add-frontmatter.ts",
    "format": "biome check . --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "preinstall": "tsx scripts/update-pm.ts",
    "prepare": "husky",
    "release": "tsx ./scripts/publish.ts",
    "sync": "turborepo-template-upgrade",
    "test": "vitest run --coverage",
    "typecheck": "turbo typecheck",
    "upgrade": "tsx ./scripts/upgrade.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "plop": "^4.0.3",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "turborepo-template-upgrade": "^0.6.2",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@<6.0.6": ">=6.0.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3"
    }
  }
}
