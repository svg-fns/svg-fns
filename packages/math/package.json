{
  "name": "@svg-fns/math",
  "author": "Mayank Kumar Chaudhari (https:/mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.0.0",
  "description": "Core SVG math utilities: 2D affine transforms, geometry helpers, and path helpers for high-quality SVG manipulation.",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:svg-fns/svg-fns",
  "bugs": "https://github.com/svg-fns/svg-fns/issues",
  "homepage": "https://github.com/svg-fns/svg-fns/tree/main/packages/math/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": [
        "./dist/*.d.ts",
        "./dist/*/index.d.ts"
      ],
      "import": [
        "./dist/*.mjs",
        "./dist/*/index.mjs"
      ],
      "require": [
        "./dist/*.js",
        "./dist/*/index.js"
      ]
    },
    "./dist/*": {
      "types": [
        "./dist/*.d.ts",
        "./dist/*/index.d.ts"
      ],
      "import": [
        "./dist/*.mjs",
        "./dist/*/index.mjs"
      ],
      "require": [
        "./dist/*.js",
        "./dist/*/index.js"
      ]
    }
  },
  "scripts": {
    "build": "tsup && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "esbuild-plugin-rdi": "^0.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/svg-fns"
    },
    {
      "type": "github",
      "url": "https:/github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "svg",
    "math",
    "geometry",
    "transforms",
    "path",
    "affine",
    "vector",
    "graphics",
    "svg-fns",
    "2d",
    "coordinate",
    "Customizable",
    "Cutting-edge",
    "Compatibility",
    "Frontend development",
    "UI components",
    "Progressive",
    "Web development",
    "Modern",
    "Seamless integration",
    "mayank1513"
  ]
}
